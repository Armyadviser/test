<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>GetPointsWithSleep</servlet-name>
        <servlet-class>storm_falcon.servlet.GetPointsWithSleep</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetPointsWithSleep</servlet-name>
        <url-pattern>/GetPointsWithSleep</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GetSpecifiedPoints</servlet-name>
        <servlet-class>storm_falcon.servlet.GetSpecifiedPoints</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetSpecifiedPoints</servlet-name>
        <url-pattern>/GetSpecifiedPoints</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>base_station.jsp</welcome-file>
    </welcome-file-list>
</web-app>